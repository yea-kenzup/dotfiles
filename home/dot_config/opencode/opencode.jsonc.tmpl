{
    "$schema": "https://opencode.ai/config.json",
    // Theme configuration
    "theme": "opencode",
    "provider": {
        "openrouter": {
            "models": {
                "anthropic/claude-haiku-4.5": {},
                "minimax/minimax-m2:free": {}
            }
        },
        "lmstudio": {
            "npm": "@ai-sdk/openai-compatible",
            "name": "LM Studio (local)",
            "options": {
                "baseURL": "http://127.0.0.1:1234/v1"
            },
            "models": {
                "qwen/qwen3-4b-2507": {
                    "name": "Qwen 3.4b (local)"
                }
            }
        }
    },
  	"mcp": {
  		"Ref": {
  		  "type": "remote",
  		  "url": "https://api.ref.tools/mcp",
  		  "headers": {
  		    "x-ref-api-key": "{env:MCP_REF_API_KEY}"
  		  }
  		},
  	  "playwright": {
        "type": "local",
        "command": [
          "npx",
          "@playwright/mcp@latest"
        ],
        "enabled": true
      },
  	  "postgres": {
        "type": "local",
        "command": [
          "uv",
          "run",
          "postgres-mcp"
        ],
        "environment": {
          "DATABASE_URI": "postgres://postgres:postgres@localhost:5432/postgres"
        },
        "enabled": true
      },
  	  "serena": {
        "type": "local",
        "command": [
          "uvx",
          "--from",
          "git+https://github.com/oraios/serena",
          "serena",
          "start-mcp-server"
        ],
        "enabled": false
      },
    },
    "agent": {
        "build": {
            "mode": "primary",
            "description": "Full development work with all tools enabled"
        },
        "plan": {
            "mode": "primary",
            "description": "Analysis and planning without making changes",
            "permission": {
                "edit": "ask",
                "bash": "ask"
            }
        },
        "debug": {
            "mode": "primary",
            "description": "General investigation and troubleshooting with bash + read tools"
        },
        "review": {
            "mode": "subagent",
            "description": "Code review with read-only access",
            "tools": {
                "write": false,
                "edit": false
            }
        },
        "docs": {
            "mode": "subagent",
            "description": "Technical writing and documentation",
            "tools": {
                "bash": false
            }
        },
        "security": {
            "mode": "subagent",
            "description": "Security audits and vulnerability identification",
            "tools": {
                "write": false,
                "edit": false
            }
        },
        "test": {
            "mode": "subagent",
            "description": "Test creation and test suite management"
        },
        "debug-specialist": {
            "mode": "subagent",
            "description": "Specialized debugging with focused tools for issue isolation and resolution"
        },
        "refactor": {
            "mode": "subagent",
            "description": "Code optimization and restructuring"
        }
    },
    "autoupdate": true,
}